Create Buddy : Tables 

PROFILE_INFORMATION:-

REATE TABLE DB2INST1."PROFILE_INFORMATION" (
	
"ID" INTEGER	NOT NULL GENERATED ALWAYS AS IDENTITY  (START WITH 1, INCREMENT BY 1),
"NAME"	VARCHAR(100)	NOT NULL,
"DESCRIPTION"	VARCHAR(1000)	NOT NULL,
"START_DATE"	VARCHAR(25)	NOT NULL,
"END_DATE"	VARCHAR(25)	NOT NULL,
"NOTIFICATION"	VARCHAR(25)	NOT NULL,
"ALERT"	VARCHAR(25)	NOT NULL,
"ACTIVE"	VARCHAR(25)	NOT NULL,
"BPM_INSTANCE_ID"	VARCHAR(15),	
"CREATED_BY"	VARCHAR(50)	NOT NULL,
"UPDATED_BY"    VARCHAR(50)	NOT NULL,
"CREATED_DT"	VARCHAR(25)	NOT NULL,
"UPDATED_DT"	VARCHAR(25)  NOT NULL
);

REATE TABLE DB2INST1."ALERTS" (
	
"ID"	INTEGER	NOT NULL GENERATED ALWAYS AS IDENTITY  (START WITH 1, INCREMENT BY 1),
"BUDDY_PROFILE_ID"	INTEGER	NOT NULL,
"NAME"	VARCHAR(100)	NOT NULL,
"DESCRIPTION"	VARCHAR(1000)	NOT NULL,
"FREQUENCY"	VARCHAR(25)	NOT NULL,
"CALENDAR_DAY"	VARCHAR(25),	
"BUSINESS_DAY"	VARCHAR(25),	
"DISTRIBUTION_LIST"	VARCHAR(5000)	NOT NULL,
"TEMPLATE"	VARCHAR(5000)	NOT NULL,
"ALERT" CHARACTER (1) NOT NULL,
"BPM_INSTANCE_ID"	VARCHAR(15),	
"CREATED_BY"	VARCHAR(25)	NOT NULL,
"UPDATED_BY"    VARCHAR(50)	NOT NULL,
"CREATED_DT"	VARCHAR(25)	NOT NULL,
"UPDATED_DT"	VARCHAR(25)	NOT NULL
);

CREATE TABLE DB2INST1."NOTIFICATIONS" (
	
"ID"	INTEGER	NOT NULL GENERATED ALWAYS AS IDENTITY  (START WITH 1, INCREMENT BY 1),
"BUDDY_PROFILE_ID"	INTEGER	NOT NULL,
"NAME"	VARCHAR(100)	NOT NULL,
"DESCRIPTION"	VARCHAR(1000)	NOT NULL,
"FREQUENCY"	VARCHAR(25)	NOT NULL,
"CALENDAR_DAY"	VARCHAR(25),	
"BUSINESS_DAY"	VARCHAR(25),	
"DISTRIBUTION_LIST"	VARCHAR(5000)	NOT NULL,
"TEMPLATE"	VARCHAR(5000)	NOT NULL,
"NOTIFICATION" CHARACTER (1) NOT NULL, 
"BPM_INSTANCE_ID"	VARCHAR(15),	
"CREATED_BY"	VARCHAR(25)	NOT NULL,
"UPDATED_BY"    VARCHAR(50)	NOT NULL,
"CREATED_DT"	VARCHAR(25)	NOT NULL,
"UPDATED_DT"	VARCHAR(25)	NOT NULL
);
